generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model GroceryItem {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  price       Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orders      OrderItem[]
}

model Order {
  id        Int         @id @default(autoincrement())
  userId    Int
  total     Float
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
}

model OrderItem {
  id            Int         @id @default(autoincrement())
  orderId       Int
  groceryItemId Int
  quantity      Int
  price         Float
  createdAt     DateTime    @default(now())
  groceryItem   GroceryItem @relation(fields: [groceryItemId], references: [id])
  order         Order       @relation(fields: [orderId], references: [id])
}

enum Role {
  ADMIN
  USER
}
